{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~/components/*": [
        "./src/components/*"
      ],
      "~/features/*": [
        "./src/libs/features/*"
      ],
      "~/helpers/*": [
        "./src/libs/helpers/*"
      ],
      "~/hooks/*": [
        "./src/libs/hooks/*"
      ],
      "~/*": [
        "./src/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "commitlint.config.js", "src/components/headers/CourseEditPageHeader/CourseEditPageHeader.tsx"],
  "exclude": ["node_modules"]
}
